{
  "name": "mcp-tool-gateway-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:test-server": "cd test/fixtures && npx tsc -p tsconfig.json",
    "pretest": "npm run build:test-server",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:e2e": "npm run build:test-server && vitest run gemini-e2e.test.ts",
    "test:unit": "vitest run --exclude '**/*e2e*.test.ts'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "*",
    "express": "^4.19.2",
    "ollama": "^0.6.2"
  },
  "devDependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsx": "^4.15.7",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
